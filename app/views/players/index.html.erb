<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-xs-12 col-md-8 offset-md-2">
        <h1>Players</h1>
        <%= link_to 'New Player', new_player_path, { :class => 'btn btn-primary' }%>
        <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered ">
          <thead class="thead-default">
            <tr>
              <th>Name</th>
              <th>Position</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @players.each do |player| %>
              <tr>
                <td><%= link_to player.name, player %></td>
                <td><%= link_to player.position.name, player.position %></td>
                <td><%= link_to 'Edit', edit_player_path(player) %></td>
                <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    </div>
</div>

