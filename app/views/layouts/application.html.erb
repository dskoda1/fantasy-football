<!DOCTYPE html>
<html>
  <head>
    <title>FantasyFootball</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name=viewport content="width=device-width, initial-scale=1">
  </head>

  <body>
    <nav class="navbar navbar-dark bg-inverse">
      <ul class="nav navbar-nav">
        <li class="nav-item active">
          <%= link_to "Teams", teams_path, class: "navbar-brand" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Players", players_path, class: "navbar-brand" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Positions", positions_path, class: "navbar-brand" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Drafted Players", draft_records_path, class: "navbar-brand" %>
        </li>
      </ul>
    </nav>
    <div class="container">
        <%= yield %>
    </div>
  </body>
</html>
