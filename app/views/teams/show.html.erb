<p id="notice"><%= notice %></p>
<div class="row">
    <div class="col-xs-12 col-md-8">
        <h1><%= @team.name %></h1>

    </div>
    <div class="col-xs-12 col-md-8">
        <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered ">
          <thead class="thead-default">
            <tr>
                <th>Name</th>
                <th>Position</th>
            </tr>
          </thead>

          <tbody>
            <% @team.players.each do |player| %>
              <tr>
                <td><%= link_to player.name, player %></td>
                <td><%= link_to player.position.name, player.position %></td>
              </tr>
            <% end %>
          </tbody>
        </table>


    </div>
    <div class="col-xs-12">
    <%= link_to 'Edit', edit_team_path(@team), { :class => 'btn btn-success'} %>
    <%= link_to 'Back', teams_path, {:class => 'btn btn-secondary' } %>
    </div>
</div>

