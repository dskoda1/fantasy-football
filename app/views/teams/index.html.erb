<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-xs-12 col-md-8 offset-md-2">
        <h1>Teams</h1>
        <%= link_to 'New Team', new_team_path, { :class => 'btn btn-primary' }%>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered ">
                <thead class="thead-default">

                    <tr>
                        <th>Name</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>

                <tbody>
                    <% @teams.each do |team| %>
                        <tr>
                            <td><%= link_to team.name, team %></td>
                            <td><%= link_to "Draft", new_draft_record_path(team: team.id) %> </td>
                            <td><%= link_to 'Edit', edit_team_path(team) %></td>
                            <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<br>

