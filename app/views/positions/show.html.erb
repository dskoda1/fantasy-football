<p id="notice"><%= notice %></p>
<div class="row">
    <div class="col-xs-12 col-md-8">
        <h1><%= @position.name %></h1>

    </div>
    <div class="col-xs-12 col-md-8">
        Total number of <%= @position.name %>s: <%= @players.count %>
        <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered ">
          <thead class="thead-default">
            <tr>
              <th>Name</th>
            </tr>
          </thead>

          <tbody>
            <% @players.each do |player| %>
              <tr>
                <td><%= link_to player.name, player %></td>
              </tr>
            <% end %>
          </tbody>
        </table>


    </div>
    <div class="col-xs-12">
    <%= link_to 'Edit', edit_position_path(@position), { :class => 'btn btn-success'} %>
    <%= link_to 'Back', positions_path, {:class => 'btn btn-secondary' } %>
    </div>
</div>


